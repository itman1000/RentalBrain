<div class="page-title">
  <h3>ユーザー一覧</h3>
</div>

<div class="main users-index">
  <div class="container">
    <% @users.each do |user| %>
      <div class="users-index-item">
        <div class="user-right">
          <%= link_to "#{user.name}", "/users/#{user.id}", data: { turbo: false }, class: "index-item2" %>
        </div>
        <div class="index-user-image">
          <%= image_tag user.avatar %>
        </div>
      </div>
    <% end %>
  </div>
</div>