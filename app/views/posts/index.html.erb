<div class="page-title">
  <h3>投稿一覧</h3>
</div>

<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="posts-index-user-image">
          <%= image_tag post.user.avatar %>
        </div>
        <div class="posts-index-user-name">
          <%= post.user.name %>
        </div>
        <%= link_to "#{post.title}", "/posts/#{post.id}", data: { turbo: false }, class: "index-item" %>
      </div>
    <% end %>
  </div>
</div>