<div class="page-title">
  <h3>回答内容確認</h3>
</div>

<div class="confirm-item">
  <div class="container">
    <div class="confirm-content">
      <%= safe_join(@post.content.split("\n"),tag(:br)) %>
    </div>

    <%= form_with model: @post, data: { turbo: false } do |form| %>
      <%= form.hidden_field :content %>
      <%= form.hidden_field :attr, value: true %>
      <%= form.hidden_field :title, value: 1 %>
      <%= form.hidden_field :reward, value: 1 %>
      <%= form.submit "投稿", class: "button1" %>
      <%= form.submit "修正", name: "back", class: "button1" %>
    <% end %>
  </div>
</div>

