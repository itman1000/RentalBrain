<div class="page-title">
  <h3>返信内容確認</h3>
</div>

<div class="confirm-item">
  <div class="container">
    <div class="confirm-content">
      <%= safe_join(@comment.content.split("\n"),tag(:br)) %>
    </div>
    
    <%= form_with( model: @comment, url: "/posts/#{@comment.post_id}/comments", data: { turbo: false }) do |form| %>
      <%= form.hidden_field :content %>
      <%= form.hidden_field :post_id, value: @comment.post_id %>
      <%= form.hidden_field :user_id, value: @current_user.id %>
      <%= form.submit "投稿", class: "button1" %>
      <%= form.submit "修正", name: "back", class: "button1" %>
    <% end %>
  </div>
</div>

